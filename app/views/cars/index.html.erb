<div class="container">
  <div class="row">
    <% @cars.each do |car| %>
      <div class="col-12 col-lg-4">
        <div class="card-trip">
          <%= cl_image_tag(car.new_image.key, class: "w-100") %>
          <div class="card-trip-infos">
            <div>
              <h2><%= car.name %></h2>
              <p><%= car.description %></p>
              <%= link_to "See more details", car_path(car), class: "btn btn-primary" %>
            </div>
            <h2 class="card-trip-pricing"> $ <%= car.price_per_day %></h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Add a new car", new_car_path %>
</div>
