<div class="container">
  <div class="row mt-4">
    <div class="d-flex justify-content-between align-items-center">
      <h1>Car lists</h1>
      <%= link_to "Add a new car", new_car_path, class: 'btn btn-primary' %>
    </div>
    <div class="col-12 mb-4">
      <form action="<%= cars_path %>" method="get" class="row g-3 justify-content-end mt-3">
        <div class="col-auto">
          <label class="col-form-label">Sort by:</label>
        </div>
        <div class="col-auto">
          <select class="form-select" id="sort" name="sort">
            <option value="price_asc">Price: Low to High</option>
            <option value="price_desc">Price: High to Low</option>
            <option value="location_asc">City: A to Z</option>
            <option value="location_desc">City: Z to A</option>
          </select>
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-primary">Apply</button>
        </div>
      </form>
    </div>
    <% @cars.each do |car| %>
      <div class="col-12 col-lg-4">
        <%= link_to car_path(car), class:"text-decoration-none text-black" do %>
          <div class="card-trip">
            <%= cl_image_tag(car.new_image.key, class: "w-100") %>
            <div class="card-trip-infos">
              <div>
                <h2 class="fs-5"><%= car.name %></h2>
                <div class="d-flex gap-3 mt-2">
                  <span><i class="fa-solid fa-person"></i> 4</span>
                  <span><i class="fa-solid fa-gas-pump"></i> 300 km</span>
                  <span><i class="fa-solid fa-map-pin"></i> <%= car.location %></span>
                </div>
              </div>
              <h2 class="card-trip-pricing fs-5 text-primary fw-bold">$<%= car.price_per_day %></h2>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
