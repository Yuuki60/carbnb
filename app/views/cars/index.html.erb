<div class="container">
  <div class="row">
    <% @cars.each do |car| %>
      <div class="col-12 col-lg-4">
        <div class="card-trip">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
          <div class="card-trip-infos">
            <div>
              <h2><%= car.name %></h2>
              <p><%= car.description %></p>
            </div>
            <h2 class="card-trip-pricing"> $ <%= car.price_per_day %></h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
