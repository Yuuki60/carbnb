<%= simple_form_for [@car, @order] do |f| %>
  <div >
    <div class="row">
      <div class="col-md-12">
        <%= f.input :start_date,
              as: :string,
              label: false,
              input_html: { data: { controller: "datepicker", datepicker_dates_value: @car.orders.to_json }, id: "start_date", class: 'd-none text-center mx-auto' }
        %>
      </div>
      <div class="col-md-6">
        <%= f.input :end_date,
              as: :hidden,
              input_html: { id: "end_date"} %>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <%= f.button :submit, "Book the car",  class: "btn btn-primary px-4 rounded-3" %>
    </div>
  </div>
<% end %>
