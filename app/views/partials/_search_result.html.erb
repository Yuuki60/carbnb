<div class="p-0" style="max-height:210px; overflow: visible; z-index: 9999">
  <% if @cars.present? %>
    <div class="bg-white w-100 p-1">
      <% @cars.each do |car| %>
        <%= link_to car_path(car), class: "text-decoration-none" do %>
          <div class="col-md-12">
            <div class="card my-2">
              <div class="row align-items-start">
                <div class="col-md-4">
                  <%= image_tag(car.new_image, class: 'img-fluid rounded-start') if car.new_image.attached? %>
                </div>
                <div class="col-md-8 py-2">
                  <h5><%= car.name %></h5>
                  <p><%= car.description %></p>
                  <div class="d-flex gap-3 mt-2">
                    <span><i class="fa-solid fa-person"></i> 4</span>
                    <span><i class="fa-solid fa-gas-pump"></i> 300 km</span>
                    <span><i class="fa-solid fa-map-pin"></i> <%= car.location %></span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white w-100 p-3">
      <p class="text-black">No car available, sorry :'(</p>
    </div>
  <% end %>
</div>
